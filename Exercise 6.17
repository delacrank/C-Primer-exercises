#include <iostream>
#include <string>

using namespace std;
    
void find_upper(const string&);
void change_to_lower(string&);

int main()
{
    string s("Hello");
    find_upper(s);
    change_to_lower(s);
    cout << s << endl;
}

// Take three variables: const string ref, char, and size_type ref
void find_upper(const string &s)
{
    for(unsigned i = 0; i != s.size(); ++i) {
        if(isupper(s[i])) {
            cout << "String " << s << " Contains uppercase char: " << s[i] << endl;
         } 
     }      
}

void change_to_lower(string &s)
{
    for(unsigned i = 0; i != s.size(); ++i) {
        s[i] = tolower(s[i]);
    }  
}

